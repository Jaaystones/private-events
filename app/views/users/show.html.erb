<!-- app/views/users/show.html.erb -->

<div class="container mx-auto mt-12 px-5">
  <% if notice.present? %>
    <p class="text-green-500"><%= notice %></p>
  <% end %>

  <h2 class="text-2xl font-bold mb-4">User Profile</h2>
  <p><strong>Email:</strong> <%= @user.email %></p>

  <h3 class="text-xl font-bold mt-8">Attended Events</h3>
  <% if @user.attended_events.any? %>
    <ul>
      <% @user.attended_events.each do |event| %>
        <li><%= link_to event.title, event_path(event) %></li>
      <% end %>
    </ul>
  <% else %>
    <p>No attended events yet.</p>
  <% end %>
</div>
