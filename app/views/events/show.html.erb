<div class="container mx-auto mt-12 px-5">
  <% if notice.present? %>
    <p class="text-green-500"><%= notice %></p>
  <% end %>

  <%= render @event %>

  <div class="mt-8">
    <%= link_to "Edit this event", edit_event_path(@event), class: "text-blue-500 font-bold mr-4" %>
    <%= link_to "Back to Events", events_path, class: "text-blue-500 font-bold mr-4" %>
    <%= button_to "Destroy this event", @event, method: :delete, data: { confirm: "Are you sure?" }, class: "bg-red-500 hover:bg-red-700 text-white font-bold py-2 px-4 rounded focus:outline-none focus:shadow-outline" %>
  </div>
</div>
